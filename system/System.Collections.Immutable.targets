<?xml version="1.0" encoding="utf-8"?>
<Project>  
  <Choose>
    <When Condition="'$(TargetFramework)' == 'net40'">
      <ItemGroup>
        <PackageReference Remove="System.Collections.Immutable" />
      </ItemGroup>
    </When>
    <When Condition="'$(TargetFramework)' == 'net35'">
      <ItemGroup>
        <PackageReference Remove="System.Collections.Immutable" />
      </ItemGroup>
    </When>
    <When Condition="'$(TargetFramework)' == 'net30'">
      <ItemGroup>
        <PackageReference Remove="System.Collections.Immutable" />
      </ItemGroup>
    </When>
    <When Condition="'$(TargetFramework)' == 'net20'">
      <ItemGroup>
        <PackageReference Remove="System.Collections.Immutable" />
      </ItemGroup>
    </When>

    <Otherwise>
      <ItemGroup>
        <PackageReference Update="System.Collections.Immutable" Version="1.7.*" />
      </ItemGroup>
    </Otherwise>
  </Choose>
</Project>