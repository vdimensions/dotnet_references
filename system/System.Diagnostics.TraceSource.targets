<?xml version="1.0" encoding="utf-8"?>
<Project>
  <Choose>
    <!-- 
     | netstandard 
     -->
    <When Condition="'$(TargetFramework)' == 'netstandard1.2'">
      <ItemGroup>
        <PackageReference Remove="System.Diagnostics.TraceSource" />
      </ItemGroup>
    </When>
    <When Condition="'$(TargetFramework)' == 'netstandard1.1'">
      <ItemGroup>
        <PackageReference Remove="System.Diagnostics.TraceSource" />
      </ItemGroup>
    </When>
    <When Condition="'$(TargetFramework)' == 'netstandard1.0'">
      <ItemGroup>
        <PackageReference Remove="System.Diagnostics.TraceSource" />
      </ItemGroup>
    </When>

    <!-- 
     | netframework 
     -->
    <When Condition=" '$(TargetFramework)' == 'net452' " >
      <ItemGroup>
        <PackageReference Remove="System.Diagnostics.TraceSource" />
      </ItemGroup>
    </When>
    <When Condition=" '$(TargetFramework)' == 'net451' " >
      <ItemGroup>
        <PackageReference Remove="System.Diagnostics.TraceSource" />
      </ItemGroup>
    </When>
    <When Condition=" '$(TargetFramework)' == 'net45' " >
      <ItemGroup>
        <PackageReference Remove="System.Diagnostics.TraceSource" />
      </ItemGroup>
    </When>
    <When Condition=" '$(TargetFramework)' == 'net403' " >
      <ItemGroup>
        <PackageReference Remove="System.Diagnostics.TraceSource" />
      </ItemGroup>
    </When>
    <When Condition=" '$(TargetFramework)' == 'net40' " >
      <ItemGroup>
        <PackageReference Remove="System.Diagnostics.TraceSource" />
      </ItemGroup>
    </When>
    <When Condition=" '$(TargetFramework)' == 'net35' " >
      <ItemGroup>
        <PackageReference Remove="System.Diagnostics.TraceSource" />
      </ItemGroup>
    </When>
    <When Condition=" '$(TargetFramework)' == 'net30' " >
      <ItemGroup>
        <PackageReference Remove="System.Diagnostics.TraceSource" />
      </ItemGroup>
    </When>
    <When Condition=" '$(TargetFramework)' == 'net20' " >
      <ItemGroup>
        <PackageReference Remove="System.Diagnostics.TraceSource" />
      </ItemGroup>
    </When>
    
    <Otherwise>
      <ItemGroup>
        <PackageReference Update="System.Diagnostics.TraceSource" Version="4.3" Condition=" '$(OutputType)' != 'Library' " />
        <PackageReference Update="System.Diagnostics.TraceSource" Version="4.0" Condition=" '$(OutputType)' == 'Library' " />
      </ItemGroup>
    </Otherwise>
  </Choose>
</Project>