<?xml version="1.0" encoding="utf-8"?>
<Project>
  <Choose>
    <!-- 
     | netstandard
     -->
    
    <!-- 
     | netframework
     -->
    <When Condition=" '$(TargetFramework)' == 'net40' " >
      <ItemGroup>
        <PackageReference Remove="System.Xml.XmlSerializer" />
      </ItemGroup>
    </When>
    <When Condition=" '$(TargetFramework)' == 'net35' " >
      <ItemGroup>
        <PackageReference Remove="System.Xml.XmlSerializer" />
      </ItemGroup>
    </When>
    <When Condition=" '$(TargetFramework)' == 'net30' " >
      <ItemGroup>
        <PackageReference Remove="System.Xml.XmlSerializer" />
      </ItemGroup>
    </When>
    <When Condition=" '$(TargetFramework)' == 'net20' " >
      <ItemGroup>
        <PackageReference Remove="System.Xml.XmlSerializer" />
      </ItemGroup>
    </When>
    
    <Otherwise>
      <ItemGroup>
        <PackageReference Update="System.Xml.XmlSerializer" Version="4.3" />
      </ItemGroup>
    </Otherwise>
  </Choose>
</Project>